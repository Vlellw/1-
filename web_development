from flask import Flask, render_template, request
import os
from werkzeug.utils import secure_filename

app = Flask(__name__)

# Указываем папку для хранения загруженных изображений
UPLOAD_FOLDER = 'static/uploads/'
app.config['UPLOAD_FOLDER'] = UPLOAD_FOLDER

# Разрешенные расширения файлов
ALLOWED_EXTENSIONS = {'png', 'jpg', 'jpeg', 'gif'}

def allowed_file(filename):
    return '.' in filename and \
           filename.rsplit('.', 1)[1].lower() in ALLOWED_EXTENSIONS

@app.route('/', methods=['GET', 'POST'])
def index():
    if request.method == 'POST':
        # Проверяем, что файл присутствует в запросе
        if 'file' not in request.files:
            return render_template('index.html', images=None, error='Нет файла для загрузки')
        
        file = request.files['file']

        # Проверяем, что файл имеет допустимое расширение и не пустой
        if file and allowed_file(file.filename):
            filename = secure_filename(file.filename)
            filepath = os.path.join(app.config['UPLOAD_FOLDER'], filename)
            file.save(filepath)
            
            images = [filepath]
            return render_template('index.html', images=images)
        
        return render_template('index.html', images=None, error='Недопустимый файл')

    return render_template('index.html', images=None)

if __name__ == '__main__':
    app.run(debug=True)
